<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuoteActivity">

    <RelativeLayout
        android:id="@+id/quotes_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background1"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/new_quote_button"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:padding="16dp"
            android:scrollbarStyle="outsideOverlay">

            <TextView
                android:id="@+id/quote_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:lineSpacingExtra="8sp"
                android:text="@string/click_new_quote_to_get_a_new_quote"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                tools:ignore="RtlCompat" />
        </ScrollView>

        <Button
            android:id="@+id/new_quote_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:background="@android:color/transparent"
            android:layout_marginBottom="20dp"
            android:foreground="?attr/selectableItemBackground"
            android:text="@string/new_quote" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
